<% @friendships.each do |friend| %>
  <tr>
    <td><%= friend.full_name %></td>
    <td><%= friend.email %></td>
    <td><%= link_to "View Profile", user_path(friend), class: "btn btn-primary btn-xs" %></td>
      <td><%= link_to "Remove friend", friendship_path(friend),
                      method: :delete,
                      data: {confirm: "Are you sure?"},
                      class: "btn btn-xs btn-danger" %>
      </td>
  </tr>
<% end %>